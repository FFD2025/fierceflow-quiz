  <h1>What's your primary goal for using AI tools?</h1>
  <div class="button-grid">
    <button class="option-btn goal-select goal-productivity">Boost Productivity & automate tasks</button>
    <button class="option-btn goal-select goal-content">Create Content faster and better</button>
    <button class="option-btn goal-select goal-finance">Manage my finances & budget smarter</button>
    <button class="option-btn goal-select goal-wellness">Support my emotional wellbeing</button>
    <button class="option-btn goal-select goal-learn button-full">Learn faster & stay ahead</button>
  </div>

  <script>
    document.querySelectorAll('.goal-select').forEach(btn => {
      btn.addEventListener('click', () => {
        document.querySelectorAll('.goal-select').forEach(b => b.classList.remove('selected'));
        btn.classList.add('selected');

        const classList = Array.from(btn.classList);
        const goalClass = classList.find(cls => cls.startsWith('goal-') && cls !== 'goal-select');
        const goal = goalClass?.replace('goal-', '');

        if (goal) {
          setTimeout(() => {
            window.location.href = `comfort-quiz.html?goal=${goal}`;
          }, 400);
        } else {
          alert("Oops! Couldn't determine your goal. Try again.");
        }
      });
    });
  </script>
